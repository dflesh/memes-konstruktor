        }

        .button {
            background: deepskyblue !important;
            color: #191b1f !important;
        }

        a:hover {
            text-decoration: underline;
            color: #3b7adf;
        }
        .label {
            color: deepskyblue;
        }
        #file_upload_form_avatar{

        }
        .title {
            color: deepskyblue;
        }
        .button {
            background: deepskyblue;
            color: #191b1f
        }
    </style>
    <body style="background: #191b1f; color: #e4e2ff; display: flex; min-height: 100vh; flex-direction: column">
