            <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/jquery-ui.min.js"></script>
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </head>
    <style>
        html {
            font-family: 'Nunito Sans', sans-serif;
            color: #3b7adf;
        }
        a {
